<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/changes/1.0.0"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <body>

    <release version="1.0.6" date="not released">
      <action type="update" dev="sseifert">
        Make JUnit 4 dependency provided.
      </action>
    </release>

    <release version="1.0.4" date="2018-08-27">
      <action type="update" dev="sseifert">
        Make compatible with aem-mock.junit4 and aem-mock.junit5.
      </action>
      <action type="update" dev="sseifert">
        Add Jetbrains NotNull/Nullable annotations to API.
      </action>
    </release>

    <release version="1.0.2" date="2017-06-02">
      <action type="update" dev="sseifert">
        Make compatible with URL Handler 1.1.0, Rich Text Handler 1.1.0.
      </action>
    </release>

    <release version="1.0.0" date="2017-04-04">
      <action type="update" dev="sseifert">
        Switch to AEM 6.1 and Java 8 as minimum versions.
      </action>
      <action type="update" dev="sseifert">
        Update to Handler 1.x.
      </action>
      <action type="update" dev="sseifert">
        Remove deprecated method MockHandler class.
      </action>
    </release>

    <release version="0.6.0" date="2017-02-08">
      <action type="add" dev="sseifert">
        Provide Mock Context Plugin.
      </action>
      <action type="update" dev="sseifert">
        Remove direct dependencies to other Mock Context Plugins.
      </action>
      <action type="update" dev="sseifert">
        Do not register sling model packages for handler - is done automatically with latest sling-mock version.
      </action>
      <action type="update" dev="sseifert">
        Make dependencies to wcm.io Config provided.
      </action>
    </release>

    <release version="0.5.4" date="2016-02-16">
      <action type="update" dev="sseifert">
        Set AEM API and OSGi dependencies to provided scope.
      </action>
    </release>

    <release version="0.5.2" date="2015-03-09">
      <action type="fix" dev="sseifert">
        Register url handler config parameter.
      </action>
    </release>

    <release version="0.5.0" date="2014-11-05">
      <action type="add" dev="sseifert">
        Initial release.
      </action>
    </release>

  </body>
</document>
