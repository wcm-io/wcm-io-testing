<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/changes/1.0.0"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <body>

    <release version="1.2.0" date="not released">
      <action type="update" dev="sseifert">
        Switch to AEM 6.5 as minimum version.
      </action>
    </release>

    <release version="1.1.0" date="2021-01-17">
      <action type="update" dev="sseifert">
        Switch to AEM 6.4 as minimum version.
      </action>
      <action type="update" dev="sseifert">
        Switch to individual OSGi artifacts with compile dependency instead of osgi.core and osgi.cmpn with provided dependency.
      </action>
    </release>

    <release version="1.0.4" date="2018-09-05">
      <action type="update" dev="sseifert">
        Make JUnit 4 dependency provided.
      </action>
    </release>

    <release version="1.0.2" date="2018-08-27">
      <action type="update" dev="sseifert">
        Make compatible with aem-mock.junit4 and aem-mock.junit5.
      </action>
      <action type="update" dev="sseifert">
        Add Jetbrains NotNull/Nullable annotations to API.
      </action>
    </release>

    <release version="1.0.0" date="2017-04-04">
      <action type="update" dev="sseifert">
        Switch to AEM 6.1 and Java 8 as minimum versions.
      </action>
      <action type="update" dev="sseifert">
        Add support for Context-Aware services.
      </action>
      <action type="update" dev="sseifert">
        Remove deprecated method MockSlingExtensions.setUp.
      </action>
    </release>

    <release version="0.6.0" date="2017-02-08">
      <action type="add" dev="sseifert">
        Provide Mock Context Plugin.
      </action>
      <action type="update" dev="sseifert">
        Set AEM API and OSGi dependencies to provided scope.
      </action>
    </release>

    <release version="0.5.0" date="2014-11-05">
      <action type="add" dev="sseifert">
        Initial release.
      </action>
    </release>

  </body>
</document>
