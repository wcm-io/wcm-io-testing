<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%thread] %level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.apache.sling.testing.mock.osgi" level="DEBUG" />
  <logger name="org.apache.sling.testing.mock.sling" level="DEBUG" />
  <logger name="io.wcm.testing.mock.aem" level="DEBUG" />

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
